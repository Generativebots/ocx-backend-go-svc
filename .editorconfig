root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab

[*.{yaml,yml,json,toml}]
indent_style = space
indent_size = 2

[*.{sql,proto}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[Dockerfile*]
indent_style = space
indent_size = 4
