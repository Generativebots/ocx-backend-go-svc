# =============================================================================
# OCX Go Backend - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# Environment variables override config.yaml values
# =============================================================================

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
PORT=8080
OCX_ENV=development
OCX_INTERFACE=eth0

# -----------------------------------------------------------------------------
# Database - Supabase (Required)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Reputation Backend (uses Supabase by default)
# -----------------------------------------------------------------------------
REPUTATION_BACKEND=supabase

# -----------------------------------------------------------------------------
# Escrow Configuration
# -----------------------------------------------------------------------------
ESCROW_MODE=standard
ENTROPY_THRESHOLD=0.85
ENABLE_LIVE_CAPTURE=false
JURY_SERVICE_ADDR=localhost:50051

# -----------------------------------------------------------------------------
# Trust Secrets
# -----------------------------------------------------------------------------
VISUAL_SECRET_KEY=your-visual-secret-key
TEST_SECRET_KEY=your-test-secret-key
